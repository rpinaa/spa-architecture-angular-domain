/* You can add global styles to this file, and also import other style files */
@import '~nib/index'
@import '~jeet/styl/index'
@import '~rupture/rupture/index'

@import 'app/common/styles/vars'
@import 'app/common/styles/fonts'
@import 'app/common/styles/helpers'
@import 'app/common/styles/buttons'
@import 'app/common/styles/titles'
@import 'app/common/styles/components'

*
  margin 0

html
body
  height 100%
  font-family 'Open sans'

.browserupgrade
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

.page-wrap
  min-height 100%
  margin-bottom -(footer-height)
  &:after
    content ""
    display block

.footer
.page-wrap:after
  height footer-height

.footer
  background orange

.section
  &__subtitle
    font-size 24px
    font-weight bold
    line-height 1.5
    text-align left
    color black
    +below(600px)
      font-size 14px
    .squash
      color squash
.material-tooltip
  color black
  font-size .8em
  font-weight bold

.backdrop
  background-color white
  color black

.page-footer
  background-color white-four
  position relative
  .limit
    position relative
    z-index 1
    +below(480px)
      text-align center
  .footer-copyright
    background-color macaroni-and-cheese
    font-size .9em
    font-weight 600
    text-transform uppercase
    position relative
  .title
    font-size 1.1em
    font-weight 800
    text-transform uppercase
    position relative
    padding-bottom 10px
    &:after
      content ''
      width 50%
      height 1px
      background macaroni-and-cheese
      display block
      position absolute
      bottom 0
      left 0
      +below(480px)
        transform translate(-50%,0)
        left 50%

  .footer__list
    .link
      font-size .9em
      text-transform uppercase
      line-height 1
      display inline-block
      margin-bottom 5px

      &:after
        content ''
        border-bottom 1px solid #4a4a4a
        height 1px
        position relative
        width 0
        display block
        line-height 0
        margin-top 5px
        transition width .2s ease-in-out
      &:hover:after
        width 100%
  .logo-squint
    max-width 200px
    margin 0 auto
    img
      width 100%

  .circles__container
    overflow hidden
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 0
    .circle-deco--left
      width deco-size
      border deco-width solid white-three
      height deco-size
      display block
      border-radius 50%
      position absolute
      top -170%
      left -11%
      z-index -1
    .circle-deco--right
      width deco-size
      border deco-width solid white-three
      height deco-size
      display block
      border-radius 50%
      position absolute
      top -170%
      right -20%
      z-index -1
    .circle-deco--left
    .circle-deco--right
      +below(480px)
        display none
