@import '~nib/index'
@import '~jeet/styl/index'
@import '~rupture/rupture/index'

@import '../../common/styles/vars'

.section__youtube
	padding 30px 15px
	.limit
		clearfix()

.hero-video__container
	clearfix()
	width 100%
	height 315px
	margin-bottom 20px
	padding-bottom 20px
	border-bottom 1px solid white-two
	+below(1200px)
		height auto

	.hero-video
		span(1/2)
		height 100%
		min-height 315px
		padding-bottom 20px
		+below(1200px)
			stack()
		+below(480px)
			padding 0
			min-height 215px

	.video__content
		span(1/2)
		background white
		height 100%
		padding 20px
		position relative
		+below(1200px)
			height 280px
			stack()

		.profile-pic__container
			float left
			vertical-align top
			width 100px
			height 100px
			overflow hidden
			border-radius 50%
			position relative
			+below(480px)
				width 30px
				height 30px

			.profile__img
				width 100%
				align()
		.info
			float left
			vertical-align top
			width 75%
			margin-left 20px
			height 100%
			position relative

			.video__title
				font-weight 600
				margin-top 0
				margin-bottom 2px
				text-align left
				color black
				font-size 24px
				max-height 55px
				display block
				position relative
				display -webkit-box
				overflow hidden
				text-overflow ellipsis
				max-width 510px
				line-height 1.3
				-webkit-line-clamp 3
				-webkit-box-orient vertical
				left 0
			.video__channel
				font-size 14px
				text-align left
				color warm-grey
				text-decoration none
				&:hover
					text-decoration underline
				.ico-verified
					margin-left 5px
					vertical-align middle
		.stats
			float left
			width 100%
			text-align center
			position absolute
			bottom 0
			.stat
				&--big
					font-size 2.5em
					font-weight bold
					margin-bottom 50px
					+below(480px)
						font-size 2em
						margin-bottom 10px

					.black-text
						font-size .8em
						font-weight normal
				&.likes
				&.time
					column(1/2)
				&.likes
					text-align left
					font-size 1.2em
					font-weight bold
					color greyish-brown
					+below(480px)
						stack()
						margin-bottom 10px
					span
						&:first-child
							margin-right 30px
						i
							font-size 1.5em
							color warm-grey
							vertical-align text-top
							margin-right 5px
				&.time
					text-align right
					font-size 1em
					font-weight normal
					text-align right
					color warm-grey
					+below(480px)
						stack()
						text-align left
					span
						font-weight bold


.normal-video
	span(1/4)
	padding 0 20px
	+below(1200px)
		padding 0 10px
	+below(480px)
		stack()
		border-bottom 1px solid white-two
		padding 0
		padding-bottom 10px
		margin-bottom 10px
	& + &
		border-left 1px solid white-two
		+below(480px)
			border-left 0

	.img-video__container
		height 134px
		position relative
		background warm-grey
		overflow hidden
		+below(1200px)
			height 85px

		.video__img
			align()
			width auto
			min-width 440px
			width 100%

	.video__content
		position relative
		height 200px
		padding-top 20px
		+below(1200px)
			height 180px
			padding-top 10px
		+below(480px)
			height 160px

		.profile-pic__container
			column(.2)
			float left
			vertical-align top
			width 40px
			height 40px
			overflow hidden
			border-radius 50%
			position relative
			max-width 40px
			min-width 40px
			min-height 40px
			max-height 40px
			+below(1200px)
				min-width 20px
				min-height 20px
				max-height 20px
				max-width 20px


			.profile__img
				width 100%
				align()
		.info
			float left
			vertical-align top
			margin-left 20px
			height 100%
			position relative
			column(.8)
			+below(1360px)
				width 77.5%

			.video__title
				font-weight 600
				margin-top 0
				margin-bottom 2px
				text-align left
				color black
				font-size 1em
				max-height 55px
				display block
				position relative
				display -webkit-box
				overflow hidden
				text-overflow ellipsis
				max-width 510px
				line-height 1.1
				-webkit-line-clamp 3
				-webkit-box-orient vertical
				left 0
				+below(1200px)
					font-size .8em
					margin-bottom 0
					max-height 50px
					display block
					position relative
					display -webkit-box
					overflow hidden
					text-overflow ellipsis
					max-width 510px
					line-height 1.1
					-webkit-line-clamp 3
					-webkit-box-orient vertical
					left 0

			.video__channel
				font-size 14px
				text-align left
				color warm-grey
				text-decoration none
				&:hover
					text-decoration underline
				+below(1200px)
					font-size .6em
				.ico-verified
					+below(1200px)
						vertical-align text-bottom
						max-width 12px

		.stats
			float left
			width 100%
			text-align center
			position absolute
			bottom 0
			.stat
				&--normal
					font-size 1.4em
					font-weight bold
					margin-bottom 25px
					line-height 1
					display block
					.black-text
						font-size .8em
						font-weight normal

				&.likes
					column(.7)
					text-align left
					font-size .9em
					font-weight bold
					color greyish-brown
					+below(1200px)
						stack()
						margin-bottom 10px
					+below(480px)
						+below(480px)
							unstack()
							column(.7)
							text-align left
					span
						&:first-child
							margin-right 15px
						i
							font-size 1.5em
							color warm-grey
							vertical-align text-top
							margin-right 5px
				&.time
					column(.3)
					text-align right
					font-size .8em
					font-weight normal
					text-align right
					color warm-grey
					+below(1200px)
						stack()
						text-align left
					+below(480px)
						unstack()
						column(.3)
						text-align right
					span
						font-weight bold
