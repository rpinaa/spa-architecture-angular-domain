@import '~nib/index'
@import '~jeet/styl/index'
@import '~rupture/rupture/index'

@import '../../common/styles/vars'

.section__cta
	height 400px
	position relative
	background-image linear-gradient(84deg, macaroni-and-cheese, #fbdf77)
	overflow hidden
	+below(1200px)
		height 190px
	.limit
		clearfix()
		position relative
		height 100%
		.cta__content
			position absolute
			top 50%
			transform translate(0, -50%)
			z-index 2
			.txt
				font-size 3em
				font-weight 300
				text-align left
				color black
				line-height 1.2
				margin-bottom 20px
				max-width 60%
				+below(1200px)
					font-size 1.7em
				.white-text
					font-weight 600

			.btn
				font-weight bold
		.graphic
			position absolute
			bottom 0
			right -10%
			z-index 1
			width 45%
			max-width 580px
		.deco-squint
			position absolute
			top 0px
			right -10%
			z-index 0
			width 80%
			max-width 980px
			opacity .5
