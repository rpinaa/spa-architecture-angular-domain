.limit
	margin 0 auto
	max-width 1440px
	width 95%
.border-right
	border-right solid 1px white-two
	padding-right 15px
.border-bottom
	border-bottom solid 1px white-two
	
// TRUNCATE TEXT
// clamp 3 lines
font-size = 18px
line-height = 1.1
lines-to-show = 3

// clamp first tweet
font-size-first = 12px
line-height-first = 1.3
lines-to-show-first = 2

// clamp 2 tweet
font-size-tweet = 14px
line-height-tweet = 1.1
lines-to-show-tweet = 2

// clamp 3 lines title
title-font-size = 30px
title-line-height = 1.1
title-lines-to-show = 3

// clamp 3 lines yt hero video
font-size-yth = 24px
line-height-yth = 1.1
lines-to-show-yth = 3

// clamp 3 lines yt hero video
font-size-ytn = 16px
line-height-ytn = 1.1
lines-to-show-ytn = 3


.clamp-txt-3
.clamp-txt-first
.clamp-txt-tweet
.clamp-txt-title
.clamp-txt-yth
.clamp-txt-ytn
	display block
	position relative
	display -webkit-box
	overflow hidden
	text-overflow ellipsis

.clamp-txt-3
	max-width 300px
	height font-size*line-height*lines-to-show
	font-size font-size
	line-height line-height
	-webkit-line-clamp lines-to-show
	-webkit-box-orient vertical
	left 0
.clamp-txt-first
	max-width 250px
	height font-size-first*line-height-first*lines-to-show-first
	font-size font-size-first !important
	line-height line-height-first !important
	-webkit-line-clamp lines-to-show-first
	-webkit-box-orient vertical
	left 0
.clamp-txt-tweet
	max-width 300px
	height font-size-tweet*line-height-tweet*lines-to-show-tweet
	font-size font-size-tweet
	line-height line-height-tweet
	-webkit-line-clamp lines-to-show-tweet
	-webkit-box-orient vertical
	left 0
.clamp-txt-title
	max-width 300px
	height title-font-size*title-line-height*title-lines-to-show
	font-size title-font-size
	line-height title-line-height
	-webkit-line-clamp title-lines-to-show
	-webkit-box-orient vertical
	left 0
	+below(1025px)
		line-height title-line-height + .1 !important
.clamp-txt-yth
	max-width 510px
	height font-size-yth*line-height-yth*lines-to-show-yth
	font-size font-size-yth
	line-height line-height-yth
	-webkit-line-clamp lines-to-show-yth
	-webkit-box-orient vertical
	left 0
	
.clamp-txt-ytn
	max-width 510px
	height font-size-ytn*line-height-ytn*lines-to-show-ytn
	font-size font-size-ytn
	line-height line-height-ytn
	-webkit-line-clamp lines-to-show-ytn
	-webkit-box-orient vertical
	left 0

.gradient
	background-image linear-gradient(bottom, white, white-three)

.vr
	width 1px
	overflow hidden
	height 20px
	border none
	border-left 1px solid white-two
	display inline-block
	vertical-align middle
	margin 0 5px
.shadow
	position absolute
	width 90%
	height 50%
	transform translate(-50%, 0)
	box-shadow 0 10px 46px -7px rgba(0,0,0,0.15)
	left 50%
	bottom 3px
	z-index 0