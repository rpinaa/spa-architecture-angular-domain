@import '~nib/index'
@import '~jeet/styl/index'
@import '~rupture/rupture/index'

@import '../../common/styles/vars'

.section__search-trends
	padding 30px 15px
	.limit
		clearfix()
		&__search
			clearfix()
			width 100%
			max-width 1035px
			margin 0 auto
			.search__items
				.left
				.right
					width 48%
					+below(480px)
						width 100%
.search
	&__item
		padding 10px 20px 10px 10px
		position relative
		border-radius 5px
		background-color white
		box-shadow 0 4px 5px 0 rgba(0, 0, 0, 0.05)
		margin-bottom 10px
		width 100%
		&:after
			content i-chevron
			font-family 'squint'
			position absolute
			top 50%
			right 5px
			transform translate(0,-50%)
			color squash
			font-weight bold
			font-size 1.1em
		.link
			.search
				&-pic
					align()
					min-width 110px
					width 100px

					&__container
						width 100px
						height 100px
						margin-right 10px
						position relative
						display inline-block
						vertical-align top
						&:before
							content ''
							position absolute
							top 0
							right 0
							bottom 0
							left 0
							background-image linear-gradient(top, rgba(13, 10, 26, 0.0), #0d0921)
							z-index 1
						.rank
							position absolute
							color white
							bottom 10px
							left 10px
							font-size 2.5em
							font-weight 400
							line-height 1
							z-index 1
							text-shadow 0 10px 9px rgba(0,0,0,0.09)
				&__info
					width calc(100% - 120px)
					display inline-block
					vertical-align top
					.search
						&__title
							font-size 18px
							margin 0
							margin-bottom 5px
							font-weight bold
							text-align left
							color greyish-brown
						&__searches
							font-size 12px
							font-weight 800
							text-align left
							color squash
						&__txt
							font-size 14px
							text-align left
							color greyish-brown
							line-height 1.4
							display block
							position relative
							display -webkit-box
							overflow hidden
							text-overflow ellipsis
							max-width 310px
							height 40px
							-webkit-line-clamp 2
							-webkit-box-orient vertical
							left 0
.search__date
	margin-bottom 20px
	.date
		width 220px
		display inline-block
		vertical-align middle
		font-size .8em
		font-weight bold
		text-align left
		color greyish-brown
		text-transform uppercase
		&__hr
			border none
			border-top 1px solid white-two
			width calc(100% - 225px)
			display inline-block
			vertical-align middle
