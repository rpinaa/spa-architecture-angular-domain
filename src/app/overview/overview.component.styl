@import '~rupture/rupture/index'

@import '../common/styles/vars'

.section__vistazo
  background-image linear-gradient(84deg, #fbdf77, macaroni-and-cheese)
  text-align center
  .title
  .input-field-container
    display inline-block
    vertical-align middle
    +below(480px)
      text-align center
      line-height 1.1
    .input-field
      text-align left
      +below(480px)
        text-align center
      .autocomplete
        &::-webkit-input-placeholder
          color white
        &::-moz-placeholder
          color white
        &:-ms-input-placeholder
          color white
        &:-moz-placeholder
          color white
      input[type=text]:not(.browser-default)
        height 5rem
        font-size 4em
        font-weight 100
        border-bottom: 1px solid white
        max-width 440px
        width 100%
        +below(480px)
          text-align center
          font-size 2.5em
  .title
    padding 50px 0
    font-weight 100
    text-transform uppercase
    font-size 2.5em
    margin-right 30px
    +below(600px)
      padding 50px 0 10px 0
    +below(480px)
      padding 0
      margin-bottom -10px
      margin-right 0
    b
      font-size 1.7em
      +below(480px)
        font-size 1.1em

nav
  .nav-wrapper
    margin 0 auto
    max-width 1280px
    width 95%
    text-transform uppercase
    font-weight bold

    .ico-search
      vertical-align middle
    .btn-flat
      font-size .9em
    ul
      li
        a
          font-size .9em
  .brand-logo
    +below(992px)
      left: 0px;
      transform: translateX(0);
    img
      vertical-align middle
  .circles__container
    overflow hidden
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index -1
    .circle-deco--left
      width deco-size
      border deco-width solid white-three
      height deco-size
      display block
      border-radius 50%
      position absolute
      top -170%
      left -11%
      z-index -1
    .circle-deco--right
      width deco-size
      border deco-width solid white-three
      height deco-size
      display block
      border-radius 50%
      position absolute
      top -170%
      right -20%
      z-index -1
    .circle-deco--left
    .circle-deco--right
      +below(480px)
        display none

.dropdown-content
  li>a
    color black

.section__vistazo
  .autocomplete-content
    position absolute
    +below(480px)
      width 100%
    li
      >span
        color black
        font-weight 200
      .highlight
        color #f7a43d
        font-weight bold

  .input-field

    .prefix
      font-style normal
      &.active
        color macaroni-and-cheese

  input[type=text]
    &:not(.browser-default)
      &:focus:not([readonly])
        border-bottom 1px solid macaroni-and-cheese
        box-shadow 0 1px 0 0 macaroni-and-cheese
