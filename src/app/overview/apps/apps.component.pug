// APPS
section.section__apps.gradient
  .limit
    
    // APPS GOOGLE PLAY
    .left
      h3.section__subtitle #[span.squash APPS] EN GOOGLE PLAY
      .apps__container
        .buttons
          input.btn__radio(type='radio', name='g-apps', id='g-free', checked='true')
          label(for='g-free') GRATIS
          input.btn__radio(type='radio', name='g-apps', id='g-pay')
          label(for='g-pay') PAGA
        - for (var x = 1; x <= 5; x++)
          .app__item
            a.link(href='#!')
              .app-pic__container
                img.app__pic(src='assets/img/app-pic.jpg', alt='App')
                b.rank 0#{x}
              .app__info
                .container__info
                  h3.app__name Sarahah
                  h4.app__company De ZainAlabdin Tawfiq
                span.app__rank #[i.squint-ico.i-star.squash-txt] 5.0 
    
