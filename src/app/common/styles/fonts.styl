@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800');

@font-face
	font-family 'squint'
	src url(font-path + '/squint/squint.eot?bn2ndc')
	src url(font-path + '/squint/squint.eot?bn2ndc#iefix') format('embedded-opentype'), url(font-path + '/squint/squint.ttf?bn2ndc') format('truetype'), url(font-path + '/squint/squint.woff?bn2ndc') format('woff'), url(font-path + '/squint/squint.svg?bn2ndc#squint') format('svg')
	font-weight normal
	font-style normal

i
	&.squint-ico
		font-family 'squint' !important
		speak none
		font-style normal
		font-weight normal
		font-variant normal
		text-transform none
		line-height 1

		/* Better Font Rendering =========== */
		-webkit-font-smoothing antialiased
		-moz-osx-font-smoothing grayscale

.i-star
	&:before
		content i-star
.i-chevron
	&:before
		content i-chevron
.i-check
	&:before
		content i-check
.i-circle-arrow-left
	&:before
		content i-circle-arrow-left
.i-circle-arrow-right
	&:before
		content i-circle-arrow-right
.i-dislike
	&:before
		content i-dislike
.i-like
	&:before
		content i-like
.i-search
	&:before
		content i-search
