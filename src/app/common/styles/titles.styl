.section__title
	text-align center
	margin-bottom 50px
	overflow hidden
	+below(600px)
		margin-bottom 30px
	.title
		color black
		font-weight 800
		text-align center
		margin-bottom 5px
		&:first-letter
			color squash
		
		&__divider
			width 350px
			height 3px
			margin 0 auto
			text-align center
			line-height 0
			.divider
				&__line
					&--right
						float right
						background linear-gradient(right, rgba(244, 244, 244, 0.0), white-two)
					&--left
						float left
						background linear-gradient(left, rgba(244, 244, 244, 0.0), white-two)
					&--left
					&--right
						height 1px
						display inline-block
						vertical-align middle
						width 160px
						
				&__dot
					width 3px
					height 3px
					background white-two
					display inline-block
					vertical-align top
					border-radius 50%
					margin 0 3px
	.subtitle
		font-size 1.2em
		margin-top 5px
		font-weight 300
		letter-spacing 1px
		span
			&.yellow-text
				color squash !important